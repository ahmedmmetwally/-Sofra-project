<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/rectangle_shape">

    <TextView
        android:id="@+id/show_restaurant_review_shape_recycler_txt_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_16"
        android:text="hellowwwwwwwwwwwwwwww"
        android:textDirection="rtl" />

    <TextView
        android:id="@+id/show_restaurant_review_shape_recycler_txt_review"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_restaurant_review_shape_recycler_txt_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginRight="50dp"
        android:text="hellowwwwwwwwwwwwwwww"
        android:textDirection="rtl" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/show_restaurant_review_shape_recycler_img_review_image"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_toLeftOf="@+id/show_restaurant_review_shape_recycler_txt_review"

        />


</RelativeLayout>