<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.client.clientCycle.ForgetPasswordClientFragment"
    android:background="@drawable/background_66"
    android:orientation="vertical">


    <EditText
        android:id="@+id/fragment_creat_new_password_edt_email"
        android:textSize="20sp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangel_shapee_greylight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:hint="@string/email"/>
    <Button
        android:id="@+id/fragment_creat_new_password_btn_send"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/rectangle56"
        android:text="@string/send"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        />

</LinearLayout>