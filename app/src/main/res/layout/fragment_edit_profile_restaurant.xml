<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dim_16"
    android:fillViewport="true"
    tools:context=".ui.fragment.restaurant.EditProfileRestaurant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_edit_profile_restaurant_img_imgecricle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_16"
            android:background="@drawable/rictangle_update"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:src="@drawable/person_black_24dp" />

            <EditText
                android:id="@+id/fragment_edit_profile_restaurant_edt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_16"
            android:background="@drawable/rictangle_update"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:src="@drawable/messageshape" />

            <TextView
                android:id="@+id/fragment_edit_profile_restaurant_edt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_16"
            android:background="@drawable/rictangle_update"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:src="@drawable/home24dp" />

            <Spinner
                android:id="@+id/fragment_edit_profile_restaurant_spn_spiner_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_16"
            android:background="@drawable/rictangle_update"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:src="@drawable/home24dp" />

            <Spinner
                android:id="@+id/fragment_edit_profile_restaurant_spn_sinner_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_16"
            android:background="@drawable/rictangle_update"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="@dimen/dim_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:src="@drawable/person_black_24dp" />

            <EditText
                android:id="@+id/fragment_edit_profile_restaurant_edt_delivery_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp" />

        </LinearLayout>
        <Button
            android:id="@+id/fragment_edit_profile_restaurant_btn_continue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_32"
            android:background="@drawable/rectangle56"
            android:text="@string/continuee"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>