<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.client.homeFragment.GetRestaurantsDetailsFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_16"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
        <TextView

            android:id="@+id/fragment_get_restaurants_details_txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_16"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView

            android:id="@+id/fragment_get_restaurants_details_txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_16"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/district"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView

            android:id="@+id/fragment_get_restaurants_details_txt_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_16"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/minimum_ord"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView

            android:id="@+id/fragment_get_restaurants_details_txt_minimum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_16"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/delivery_charge"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView

            android:id="@+id/fragment_get_restaurants_details_txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_16"
            android:textSize="23sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

    </LinearLayout>


</LinearLayout>