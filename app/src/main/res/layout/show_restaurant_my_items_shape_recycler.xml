<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/show_restaurant_my_items_shape_recycler_recycler_img_delete"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_margin="@dimen/dim_5"
            android:src="@drawable/messageshape" />

        <ImageView
            android:id="@+id/show_restaurant_my_item_shape_recycler_img_edit"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_margin="@dimen/dim_5"
            android:src="@drawable/edit_black_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/dim_32"
        android:background="@drawable/rictangle_stroke_grey">

        <ImageView
            android:id="@+id/show_restaurant_my_item_shape_recycler_img_photo_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dim_16"
            android:background="@drawable/rictangle_stroke_grey" />

        <TextView
            android:id="@+id/show_restaurant_my_item_shape_recycler_txt_item_name"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/dim_8"
            android:layout_marginTop="@dimen/dim_16"
            android:text="السعر"
            android:layout_toLeftOf="@+id/show_restaurant_my_item_shape_recycler_img_photo_item"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/show_restaurant_my_item_shape_recycler_txt_item_description"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_below="@+id/show_restaurant_my_item_shape_recycler_txt_item_name"
            android:layout_marginHorizontal="@dimen/dim_8"
            android:layout_toStartOf="@+id/show_restaurant_my_item_shape_recycler_img_photo_item"
            android:maxLines="2"
            android:text="السعر"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/show_restaurant_my_item_shape_recycler_txt_item_pricetxt"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dim_32"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_toStartOf="@+id/show_restaurant_my_item_shape_recycler_txt_item_name"
            android:maxLines="2"
            android:text="@string/price"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/show_restaurant_my_item_shape_recycler_txt_item_price_num"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/show_restaurant_my_item_shape_recycler_txt_item_pricetxt"
            android:layout_marginStart="@dimen/dim_5"
            android:layout_toStartOf="@+id/show_restaurant_my_item_shape_recycler_txt_item_name"
            android:maxLines="2"
            android:text="السعر"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>