<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_66"
    android:orientation="vertical"
    android:paddingStart="@dimen/dim_8"
    android:paddingEnd="@dimen/dim_25"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragment.restaurant.dfdd.RestaurantRegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/fragment_restaurant_register_edt_restourantname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="@dimen/dim_8"
                android:drawableEnd="@drawable/person_black_24dp"
                android:hint="@string/restourant_naem" />

            <EditText
                android:id="@+id/fragment_restaurant_register_edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:drawableEnd="@drawable/messageshape"
                android:hint="@string/email" />


            <EditText
                android:id="@+id/fragment_restaurant_registert_edt_Duration_arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginRight="@dimen/dim_8"
                android:drawableEnd="@drawable/alarm_time_black_24dp"
                android:hint="@string/Duration_of_arrival"
                android:inputType="number"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/fragment_restaurant_register_sp_city"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person_black_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_restaurant_register_linear_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/fragment_restaurant_register_sp_district"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                  />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person_black_24dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/fragment_restaurant_register_edt_passewrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:drawableEnd="@drawable/lock"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/fragment_restaurant_register_edt_passewrd_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:drawableEnd="@drawable/lock"
                android:hint="@string/password_confirm"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/fragment_restaurant_register_edt_minimum_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:drawableEnd="@drawable/lock"
                android:hint="@string/minimum_order" />

            <EditText
                android:id="@+id/fragment_restaurant_register_delivery_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:drawableEnd="@drawable/lock"
                android:hint="@string/delivery_charge" />


            <Button
                android:id="@+id/fragment_restaurant_register_btn_contnue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_32"
                android:background="@drawable/rectangle56"
                android:text="@string/continuee"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>