<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_66"
    android:orientation="vertical"
    android:paddingStart="@dimen/dim_8"
    android:paddingTop="80dp"
    android:paddingEnd="@dimen/dim_32"
    tools:context=".ui.fragment.restaurant.dfdd.ContinuRestaurantRegisterFragment">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:maxLines="1"
        android:text="@string/delivery_data"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/fragment_continue_restaurant_register_edt_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16"
        android:drawableEnd="@drawable/phone24dp"
        android:hint="@string/phone_number"
        android:textColor="@color/white" />

    <EditText

        android:id="@+id/fragment_continue_restaurant_register_edt_watts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:drawableEnd="@drawable/watts_36"
        android:hint="@string/watts_app"
        android:inputType="number"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="@dimen/dim_8"
        android:text="@string/store_image"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/fragment_continue_restaurant_register_image_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="242dp"
        android:layout_marginTop="@dimen/dim_8"
        android:background="@drawable/rectangel_shapee_greylight"
        android:padding="10dp"
        android:src="@drawable/home24dp" />

    <RelativeLayout
        android:id="@+id/fragment_login_rlt_register"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle56"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_toRightOf="@+id/fragment_continue_restaurant_register_btn_register"
            android:background="@drawable/arrow_sign_in" />

        <Button
            android:id="@+id/fragment_continue_restaurant_register_btn_register"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="@drawable/rectangle56"
            android:gravity="center_vertical"
            android:text="@string/continuee"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <!--        <TextView-->

        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_marginTop="12dp"-->
        <!--            android:drawableEnd="@drawable/arrow_sign_in"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:text="@string/continuee" />-->


    </RelativeLayout>
</LinearLayout>