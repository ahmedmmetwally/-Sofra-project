<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/show_restaurant_items_shape_recycler_img_item_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rectangle_shape" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="vertical"
        android:paddingRight="@dimen/dim_16"
        android:textDirection="rtl">

        <TextView
            android:id="@+id/show_restaurant_items_shape_recycler_txt_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_16"
            android:text="ddddddddd"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/show_restaurant_items_shape_recycler_txt_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ddddddddd"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/show_restaurant_items_shape_recycler_txt_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ddddddddd"
                android:textSize="23sp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>