<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_16"
    tools:context=".ui.fragment.client.homeFragment.OfferDetailsFragment">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offer_details"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_16"
        android:textColor="@color/redre"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout

        android:layout_marginTop="@dimen/dim_32"
        android:background="@drawable/rectangle_shap2_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/fragment_offer_details_txt_name"
            android:layout_marginVertical="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/fragment_offer_details_txt_descrpition"
            android:layout_marginVertical="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/fragment_offer_details_txt_from"
            android:layout_marginVertical="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
       <TextView
           android:id="@+id/fragment_offer_details_txt_to"
            android:layout_marginVertical="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <Button
            android:id="@+id/fragment_offer_details_btn_details"
            android:background="@drawable/rectangle56"
            android:layout_marginVertical="@dimen/dim_16"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/offer_details"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>

</LinearLayout>